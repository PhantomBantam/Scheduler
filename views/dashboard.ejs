<h1>Dashboard</h1>

<form action="/users/archives" method="GET" id="archive-btn">
  <button type="submit">Go To Archives</button>
</form>


<div id="create-div">
  <h3>Create a new Reminder</h3>
  <input type="text" placeholder="title (this is required)" id="title-in">
  <textArea placeholder="put your notes here" id="notes-in"></textArea>
  <input type="date" id="date-in">
  <input type="time" id="time-in">
  <button type="submit" id="create-btn"> Create Reminder </button>  
</div>

<div id="display-div">

  <div id="display-actions">
    <h3>Your Reminders</h3>
    <button id="refresh-btn">Refresh Reminders</button>
    <select name="Filter" id="filter-select">

      <option value="active" selected>Active Reminds</option>
      <option value="all">All Reminds</option>
      <option value="day">Today's Reminds</option>

    </select>  
  </div>
  <div id="reminders">
    
  </div>
</div>


<script src="/socket.io/socket.io.js"></script> 
<script src="/scripts/dashboard.js"></script>
